<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo Tests" parallel="tests" thread-count="2">

    <parameter name="headless" value="false"/>

    <!-- Chrome тесты -->
    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.SauceDemoLoginTest"/>
            <class name="tests.SauceDemoCartTest"/>
            <class name="tests.SauceDemoNavigationTest"/>
        </classes>
    </test>

    <!-- Firefox тесты -->
    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="tests.SauceDemoLoginTest"/>
            <class name="tests.SauceDemoCartTest">
                <methods>
                    <include name="addProductToCartTest"/>
                </methods>
            </class>
            <class name="tests.SauceDemoNavigationTest">
                <methods>
                    <include name="verifyProductsPageTitle"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>